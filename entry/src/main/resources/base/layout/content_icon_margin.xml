<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <ScrollView
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:above="$id:btn_reset_slider"
        ohos:padding="8vp"
        ohos:orientation="vertical">

        <DirectionalLayout
            ohos:id="$+id:slide_container"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:orientation="vertical">

            <com.ncorti.slidetoact.SlideToActView
                ohos:id="$+id:slide_1"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:icon_margin="0"
                ohos:text="Icon margin 0" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:icon_margin="4"
                ohos:text="Icon margin 4" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:icon_margin="8"
                ohos:text="Icon margin 8" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:icon_margin="16"
                ohos:text="Icon margin 16" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:icon_margin="24"
                ohos:text="Icon margin 24" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:icon_margin="28"
                ohos:text="Icon margin 28 (default)" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:icon_margin="32"
                ohos:text="Icon margin 32" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:icon_margin="36"
                ohos:text="Icon margin 36" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:icon_margin="42"
                ohos:text="Icon margin 42" />

        </DirectionalLayout>
    </ScrollView>

    <Button
        ohos:id="$+id:btn_reset_slider"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:margin="4vp"
        ohos:padding="8vp"
        ohos:background_element="$ohos:color:id_color_activated_start_dark"
        ohos:layout_alignment="horizontal_center"
        ohos:text="Reset Slider"
        ohos:text_size="14fp"
        />

</DependentLayout>