<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:id="$+id:slide_container"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="vertical">

        <com.ncorti.slidetoact.SlideToActView
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="6vp"
            ohos:animation_duration="2000"
            ohos:text="Animation Duration 2000" />

        <com.ncorti.slidetoact.SlideToActView
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="6vp"
            ohos:animation_duration="1000"
            ohos:text="Animation Duration 1000" />

        <com.ncorti.slidetoact.SlideToActView
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="6vp"
            ohos:animation_duration="500"
            ohos:text="Animation Duration 500" />

        <com.ncorti.slidetoact.SlideToActView
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="6vp"
            ohos:animation_duration="250"
            ohos:text="Animation Duration 250" />

        <com.ncorti.slidetoact.SlideToActView
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="6vp"
            ohos:animation_duration="125"
            ohos:text="Animation Duration 125" />

        <com.ncorti.slidetoact.SlideToActView
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="6vp"
            ohos:animation_duration="62"
            ohos:text="Animation Duration 62" />

        <com.ncorti.slidetoact.SlideToActView
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="6vp"
            ohos:animation_duration="0"
            ohos:text="Animation Duration 0" />
    </DirectionalLayout>

</ScrollView>