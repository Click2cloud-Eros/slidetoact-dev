<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:id="$+id:slide_container"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="vertical">

        <!-- No Text -->
        <com.ncorti.slidetoact.SlideToActView
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="6vp"
            ohos:text="" />

        <com.ncorti.slidetoact.SlideToActView
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="6vp"
            ohos:text_size="20"
            ohos:text="TextSize 20" />

        <com.ncorti.slidetoact.SlideToActView
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="6vp"
            ohos:text_size="40"
            ohos:text="TextSize 40" />

        <com.ncorti.slidetoact.SlideToActView
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="6vp"
            ohos:text_size="60"
            ohos:text="TextSize 60 (default)" />

        <com.ncorti.slidetoact.SlideToActView
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="6vp"
            ohos:text_size="80"
            ohos:text="TextSize 80" />

    </DirectionalLayout>
</ScrollView>