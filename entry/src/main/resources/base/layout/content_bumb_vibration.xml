<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
xmlns:ohos="http://schemas.huawei.com/res/ohos"
ohos:height="match_parent"
ohos:width="match_parent">

    <ScrollView
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:above="$id:btn_reset_slider"
        ohos:padding="8vp"
        ohos:orientation="vertical">

        <DirectionalLayout
            ohos:id="$+id:slide_container"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:orientation="vertical">

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:bump_vibration="30"
                ohos:text="Bump vibration 30" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:bump_vibration="50"
                ohos:text="Bump vibration 50" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:bump_vibration="100"
                ohos:text="Bump vibration 100" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:bump_vibration="130"
                ohos:text="Bump vibration 130" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:bump_vibration="150"
                ohos:text="Bump vibration 150" />

            <com.ncorti.slidetoact.SlideToActView
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:margin="6vp"
                ohos:bump_vibration="200"
                ohos:text="Bump vibration 200" />

        </DirectionalLayout>

    </ScrollView>

    <Button
    ohos:id="$+id:btn_reset_slider"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:align_parent_bottom="true"
    ohos:margin="4vp"
    ohos:padding="8vp"
    ohos:background_element="$ohos:color:id_color_activated_start_dark"
    ohos:layout_alignment="horizontal_center"
    ohos:text="Reset Slider"
    ohos:text_size="14fp"
    />

</DependentLayout>